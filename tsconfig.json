{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "jsx": "react-jsx"
    }
}